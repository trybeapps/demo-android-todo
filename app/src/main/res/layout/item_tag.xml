<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<variable
			name="tag"
			type="io.rapid.rapido.model.Tag" />
	</data>

	<android.support.v7.widget.CardView
		android:layout_width="@dimen/spacing_16"
		android:layout_height="@dimen/spacing_16"
		android:layout_gravity="center"
		android:layout_margin="@dimen/spacing_4"
		app:cardCornerRadius="@dimen/spacing_8"
		app:cardElevation="0dp"
		app:cardBackgroundColor="@{tag.color}" />

</layout>
